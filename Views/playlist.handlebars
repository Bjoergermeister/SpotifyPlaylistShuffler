        <table id="tracks">
            <thead>
                <tr>
                    <td style="width: 50px;">#</td>
                    <td style="width: 100px;"></td>
                    <td style="width: 500px;">TITEL</td>
                </tr>
            </thead>
            <tbody>
                {{#each playlist.tracks }}
                <tr>
                    <td>{{increment @index}}.</td>
                    <td><img src="{{this.album.images.2.url}}" alt="Album Cover"></td>
                    <td>{{ this.name }}</td>
